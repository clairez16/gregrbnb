<div class = "header">
  <img src="https://images.unsplash.com/photo-1508138221679-760a23a2285b?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=2767&q=80" alt="alttext" class="img-header">
</div>

<div class="container">
  <div class="row">
    <div class="col">
      <% @infrastructures.each do |infra| %>
        <div class="card" style="width: 18rem;">
          <img src="https://images.unsplash.com/photo-1508138221679-760a23a2285b?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=2767&q=80" alt="alttext" class="featured-image">
          <div class="card-body">
            <h5 class="card-title"><%= infra.name %></h5>
            <p class="card-text"><%= infra.detail %></p>
            <%= link_to "More details", infrastructure_path(infra.id), class:"btn btn-primary"%>
          </div>
        </div>
      <% end %>
    </div>
    <div class="col">
      <div id="map-container">
        <div id="map-canvas"></div>
      </div>
    </div>
  </div>
</div>

